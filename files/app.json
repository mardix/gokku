{
  "name": "",
  "version": "",
  "description": "",
  "gokku": {
    "runtime": "python",
    "env": {
      "python_version": "2",
      "node_version": "",
      "auto_restart": true,
      "static_paths": ["/dir:path","/dir2:path2", "(alias to nginx.static_paths)"],
      "server_name": "",
      "https_only": "",
      "http_only": "",
      "threads": "4 (alias to uwsgi.threads)",
      
      "nginx": {
        "https_only": "",
        "cloudflare_acl": false,
        "include_file": ""
      },  
      "uwsgi": {
        "threads": "4",
        "gevent": true,
        "asyncio": true
      }    
    },
    "scripts": {
      "release": [],
      "destroy": [],
      "predeploy": [],
      "postdeploy": []
    },    
    "run": {
      "wsgi": "app.py:app (for wsgi/python application)",
      "web": "node server.js (For other web app which requires a server command)",
      "static": "/dir-name-or-no-name-for-root (only one path. For other paths, add to env.static_paths)",
      "worker": "script-command",
      "worker2": "script-command"
    }
  }
}